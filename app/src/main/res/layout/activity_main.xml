<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸŽ“ Student Course Management"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#6200EE"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAddStudent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="âž• Add Student"
            android:textAllCaps="false"
            android:backgroundTint="#6200EE"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnAddCourse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“š Add Course"
            android:textAllCaps="false"
            android:backgroundTint="#03DAC5"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnViewStudents"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ‘¥ View Students"
            android:textAllCaps="false"
            android:backgroundTint="#FF4081"
            android:layout_marginEnd="4dp"/>

        <Button
            android:id="@+id/btnViewCourses"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“– View Courses"
            android:textAllCaps="false"
            android:backgroundTint="#FF9800"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/editSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ðŸ” Search students..."
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@drawable/search_background"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"/>

</LinearLayout>